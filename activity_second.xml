<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/bluetoothfinal2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text_id1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:capitalize="characters"
            android:text="LIGHT 1"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ToggleButton
            android:id="@+id/simpleToggleButton1"
            android:layout_width="150dp"
            android:layout_height="100dp"

            android:checked="false"

            android:textColor="#000"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/check" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="100dp"

            app:srcCompat="@drawable/check" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text_id2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:capitalize="characters"
            android:text="LIGHT 2"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:textStyle="bold"/>

    <ToggleButton
        android:id="@+id/simpleToggleButton2"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:checked="false"

        android:textColor="#000"

        android:textOff=""
        android:textOn=""
        android:background="@drawable/check"
       />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="100dp"

            app:srcCompat="@drawable/check" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text_id3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:capitalize="characters"
            android:text="LIGHT 3"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ToggleButton
            android:id="@+id/simpleToggleButton3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:checked="false"

            android:textColor="#000"

            android:textOff=""
            android:textOn=""
            android:background="@drawable/check"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/check" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text_id4"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:capitalize="characters"
            android:text="FAN 1"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:textStyle="bold"/>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center"
         android:paddingTop="10dp"
         >

         <Button
            android:id="@+id/offButton"
            android:layout_width="85dp"
            android:layout_height="50dp"
             android:text="OFF"
             android:textColor="#000"
             android:background="#FFFF0000"
             android:dividerPadding="2dp"
             android:showDividers="middle"
                     />
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingRight="10dp"
             android:paddingTop="10dp">
               <Button
                     android:id="@+id/lowButton"
                     android:layout_width="75dp"
                     android:layout_height="50dp"
                     android:text="LOW"
                     android:textColor="#000"
                   android:dividerPadding="2dp"
                   android:showDividers="middle"


                     />
             <Button
                 android:id="@+id/medButton"
                 android:layout_width="75dp"
                 android:layout_height="50dp"
                 android:text="MEDIUM"
                 android:textColor="#000"
                 android:background="#FFFFFF00"
                 android:dividerPadding="2dp"
                 android:showDividers="middle"
                 android:layout_marginRight="5dp"
                 />
             <Button
                 android:id="@+id/highButton"
                 android:layout_width="75dp"
                 android:layout_height="50dp"
                 android:text="HIGH"
                 android:textColor="#000"
                 android:background="#FF008000"
                 android:layout_marginRight="5dp"
                 />

         </LinearLayout>
     </LinearLayout>

    </LinearLayout>


</LinearLayout>